<h1> Links </h1>

<span><%= @user.email if @user %></span>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL:   <%= link.url   %>
      Tag:  <%= link.tags.map(&:name).join(" ") %>
    </li>
  <% end %>
</ul>


<form action="/links/new">
  <input type="submit" value="New link?">
</form>
